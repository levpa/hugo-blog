{
  "name": "Hugo Blog Dev",
  "image": "hugomods/hugo:debian-std-dart-sass-git-non-root-0.151.2",
  "remoteUser": "hugo",
  "mounts": [
    "source=/run/host-services/ssh-auth.sock,target=/ssh-agent,type=bind",
    "source=${env:HOME}/.ssh,target=/home/hugo/.ssh,type=bind,consistency=cached",
    "source=${env:HOME}/.gitconfig,target=/home/hugo/.gitconfig,type=bind,consistency=cached"
  ],
  "containerEnv": {
    "SSH_AUTH_SOCK": "/ssh-agent"
  },
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers-extra/features/yamllint:2": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "budparr.language-hugo-vscode",
        "esbenp.prettier-vscode",
        "streetsidesoftware.code-spell-checker",
        "github.vscode-github-actions",
        "eamodio.gitlens",
        "redhat.vscode-yaml",
        "christian-kohler.path-intellisense",
        "davidanson.vscode-markdownlint"
      ]
    }
  },
  "forwardPorts": [
    1313
  ],
  "postCreateCommand": "./scripts/boot.sh | tee .devcontainer/.boot.log"
}